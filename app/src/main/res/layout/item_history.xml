<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_layout_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="14.29"
    android:padding="10dp"
    android:background="@color/banana_yellow">

    <TextView
        android:id="@+id/history_activity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date_time"
        android:textColor="#000000"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/history_activity_commentBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/ic_comment_black_48px" />

</RelativeLayout>
